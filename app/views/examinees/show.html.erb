<div class="container">
  <div class="col-md-6">
    <h1>
      <%= @user.name %> <br>
      <small><em>Examinee</em></small>
    </h1>

    <%= label_tag "ID: " %>
    <%=@user[:id]%>
    <br>
    <%= label_tag "Created at: " %>
    <%=@user[:created_at]%>
    <br>
    <%= label_tag "Updated at: " %>
    <%=@user[:updated_at]%>
    <br>
    <%= label_tag "Email: " %>
    <%=@user[:email]%>

    <h2>
      Exams
    </h2>

    <table class = "table">
      <thead>
      <tr>
        <th>Name</th>
        <th>Operations</th>
      </tr>
      </thead>

      <tbody>
      <% @exams.each do |exam| %>
          <tr>
            <td><%= exam[:name] %></td>
            <td> <%= link_to "View", examinee_exam_path(@user.username, exam.id) %> </td>
          </tr>
      <% end %>
      </tbody>

    </table>
  </div>
</div>
